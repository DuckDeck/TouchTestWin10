<Page
    x:Class="TouchTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TouchTest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Storyboard x:ConnectionId='1' x:Name="sbDelete" Storyboard.TargetName="btnDelete" Duration="0:0:.3">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" To="10">
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:ConnectionId='2' x:Name="sbSetting" Storyboard.TargetName="btnSetting" Duration="0:0:.3">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" To="60">
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:ConnectionId='3' x:Name="sbNext" Storyboard.TargetName="btnNext" Duration="0:0:.3">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" To="110">
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:ConnectionId='4' x:Name="sbBack" Storyboard.TargetName="btnBack" Duration="0:0:.3">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" To="160">
            </DoubleAnimation>
        </Storyboard>



        <Storyboard x:ConnectionId='5' x:Name="sbDeletef" Storyboard.TargetName="btnDelete" Duration="0:0:.3">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" To="200">
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:ConnectionId='6' x:Name="sbSettingf" Storyboard.TargetName="btnSetting" Duration="0:0:.3">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" To="200">
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:ConnectionId='7' x:Name="sbNextf" Storyboard.TargetName="btnNext" Duration="0:0:.3">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" To="200">
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:ConnectionId='8' x:Name="sbBackf" Storyboard.TargetName="btnBack" Duration="0:0:.3">
            <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" To="200">
            </DoubleAnimation>
        </Storyboard>
        <local:BindConvertor x:Key="IntToBoolConvertor"></local:BindConvertor>
    </Page.Resources>
    <Grid x:ConnectionId='9' x:Name="layoutRoot" Background="Black" >
        <StackPanel x:ConnectionId='10'  x:Name="StackPanelCoords" Width="50" HorizontalAlignment="Right">

        </StackPanel>
        <Canvas x:ConnectionId='11' x:Name="CanvasLine">

        </Canvas>
        <Grid x:ConnectionId='12' x:Name="gridCover"  Opacity="0.9"  >
            <Ellipse x:ConnectionId='17'  VerticalAlignment="Center" HorizontalAlignment="Center"   Width="200" Height="200" x:Name="ellipseHand" Opacity="0.9" >
                <Ellipse.Fill>
                    <ImageBrush ImageSource="Assets/hand.png"></ImageBrush>
                </Ellipse.Fill>
            </Ellipse>
            <Grid x:ConnectionId='18' Width="280" Height="400" Background="White" Visibility="Collapsed"  x:Name="gridSetting">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="50*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70*"/>
                    <RowDefinition Height="70*"/>
                    <RowDefinition Height="70*"/>
                    <RowDefinition Height="55*"/>
                    <RowDefinition Height="40*"/>
                    <RowDefinition Height="150*"/>
                </Grid.RowDefinitions>
                <ToggleSwitch x:ConnectionId='19' x:Name="SwitchShowTrace"  Grid.Row="0"                                   
                              VerticalAlignment="Center" Grid.Column="1" 
                              ></ToggleSwitch>
                <ToggleSwitch x:ConnectionId='20' x:Name="SwitchKeepTrace" 
                          x:Uid="TbxKeepTrace" Grid.Row="1" VerticalAlignment="Center" Grid.Column="1"
                           />
                <ToggleSwitch x:ConnectionId='21' x:Name="SwitchShowCoord" 
                           Grid.Row="2" x:Uid="TbxShowCoord" VerticalAlignment="Center" Grid.Column="1"
                           />
                <TextBlock Text="是否显示触摸痕迹" VerticalAlignment="Center" Margin="13,21,9.667,20.667"  />
                <TextBlock Text="是否保留触摸痕迹" VerticalAlignment="Center" Grid.Row="1" Margin="13,21,9.667,20.667"  ></TextBlock>
                <TextBlock Text="是否显示触摸坐标" VerticalAlignment="Center" Grid.Row="2" Margin="13,21,9.667,20.667"  ></TextBlock>
                <Slider x:ConnectionId='22' x:Name="SliderTraceThickness"
                        VerticalAlignment="Bottom" Grid.Row="4" Minimum="1" Maximum="40"   SmallChange="1" Grid.ColumnSpan="2" Height="35"  />
                <TextBlock HorizontalAlignment="Left" FontSize="18" Grid.Row="3" TextWrapping="Wrap" 
                           Text="痕迹宽度" VerticalAlignment="Center" Margin="12,12.333,0,12"  />
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="3" 
                       TextWrapping="Wrap" Width="68"  FontSize="20"
                       Text="{Binding Value, ElementName=SliderTraceThickness}" Grid.Column="1"/>
                <TextBlock Grid.Row="5"  Height="37" VerticalAlignment="Top" FontSize="18" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="41,18,41,0" >
                <Run x:Uid="RunSupportPoint1"></Run><Run Text="你的设备最多支持"></Run><Run x:ConnectionId='23' Foreground="Red" x:Name="RunPoiunt"></Run><Run Text="点触摸"></Run><Run x:Uid="RunSupportPoint2"></Run>
                </TextBlock>
            </Grid>
        </Grid>



        <Canvas HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Height="200">
            
            <Button x:ConnectionId='13' Width="40" Height="40" Canvas.Left="5"                        x:Name="btnBack" Canvas.Top="160"  Visibility="Visible">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/back.png"/>
                </Button.Background>
            </Button>
            <Button x:ConnectionId='14' Width="40" Height="40"   Canvas.Left="5" x:Name="btnNext" Canvas.Top="110"                        Visibility="Visible">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/next.png"/>
                </Button.Background>
            </Button>
            <Button x:ConnectionId='15' Width="40" Height="40"                           Canvas.Left="5" x:Name="btnSetting" Canvas.Top="60" Visibility="Visible" >
                <Button.Background>
                    <ImageBrush ImageSource="Assets/settings.png"/>
                </Button.Background>
            </Button>
            <Button x:ConnectionId='16' Width="40" Height="40"  Canvas.Left="5"                         
                    x:Name="btnDelete" Canvas.Top="10" Visibility="Visible" >
                <Button.Background>
                    <ImageBrush ImageSource="Assets/delete.png"/>
                </Button.Background>
            </Button>
        </Canvas>
    </Grid>
</Page>

